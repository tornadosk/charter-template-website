---
layout: layout.njk
pagination:
  data: collections.events
  size: 1
  alias: event
  addAllPagesToCollections: true
permalink: "events/{{ event.slug }}/index.html"
---
<h2>{{ event.title }}</h2>
{% if event.image %}
  <img src="{{ event.image }}" alt="{{ event.title }} flyer" class="event-flyer">
{% endif %}
<p><strong>Date:</strong> {{ event.date | prettyDate }}</p>
<p><strong>Location:</strong> {{ event.location }}</p>
<p>{{ event.description }}</p>

<h3>RSVP</h3>
<form name="rsvp" method="POST" data-netlify="true">
  <input type="hidden" name="event" value="{{ event.title }}" />
  <p><label>Your Name: <input type="text" name="name" required></label></p>
  <p><label>Email: <input type="email" name="email" required></label></p>
  <p><button type="submit">Submit RSVP</button></p>
</form>