---
title: Events
layout: layout.njk
permalink: /events/index.html
---
<h2>Upcoming Events</h2>
<div class="event-list">
  {% for event in collections.events %}
    <div class="event-card">
      {% if event.image %}
        <img src="{{ event.image }}" alt="{{ event.title }} flyer" />
      {% endif %}
      <h3><a href="/events/{{ event.slug }}">{{ event.title }}</a></h3>
      <p><strong>Date:</strong> {{ event.date | date("yyyy-MM-dd") }} at {{ event.location }}</p>
    </div>
  {% endfor %}
</div>